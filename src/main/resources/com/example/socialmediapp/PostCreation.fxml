<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="160.0" prefWidth="524.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.FXMLcontrollers.PostCreation">
   <children>
      <VBox prefHeight="135.0" prefWidth="524.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="524.0">
               <children>
                  <ImageView fx:id="closeButton" fitHeight="26.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/close.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="92.0">
                     <children>
                        <ImageView fitHeight="52.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/profile.png" />
                           </image>
                        </ImageView>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="413.0">
                     <children>
                        <TextArea fx:id="text" prefHeight="62.0" prefWidth="414.0" promptText="What is happening ?!" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="524.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="34.0" prefWidth="46.0">
                     <children>
                        <ImageView fx:id="documents" fitHeight="34.0" fitWidth="34.0" onMouseClicked="#LoadDocument" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/8173376.png" />
                           </image>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ImageView>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="34.0" prefWidth="54.0">
                     <children>
                        <ImageView fx:id="images" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#LoadImage" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/image-galery.png" />
                           </image>
                        </ImageView>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="410.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#createPost" text="Post" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
